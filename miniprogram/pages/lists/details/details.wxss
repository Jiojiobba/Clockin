.container{
  font-size: 35rpx;
}
.circle{
  margin: 0 auto;
}
.taskName{
  text-align: center;
  margin: 15rpx 0;
  font-weight: 600;
}
.encourage{
  text-align: center;
  margin-bottom: 20rpx;
}
.title{
  /* font-weight: 500; */
  display: flex;
  height: 50rpx;
   flex-direction: row;
  align-items: center;
  font-weight: bold;
  font-size: 33rpx;
  margin-bottom: 15rpx;
  /* justify-content: center; */
}
.small-circle{
  width: 18rpx;
  height: 18rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
  background-color: rgb(243, 84, 96);
}
.box{
  width: 100%;
  height: fit-content;
  display: flex;
  justify-content: space-between;
  text-align: center;
}
.grey-box{
  width: 48%;
  height: 150rpx;
  background-color: rgb(245, 245, 245);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.number{
  font-weight: 800;
  font-size: 38rpx;
}
.name{
  font-weight: 500;
  margin-top: 10rpx;
  font-size: 30rpx;
}
.btnAll{
  width: 100%;
  height: 80rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  text-align: center;
}
.btn{
  height: 70rpx;
  line-height: 70rpx;
  width: 30%;
  font-size: 30rpx;
  border:none;
}
.btn-end{
  background-color: rgb(203, 199, 200)
}
.btn-delete{
  background-color: rgb(243, 84, 96)
}
.btn-edit{
  background-color: rgb(247, 203, 82)
}